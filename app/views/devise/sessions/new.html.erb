
<div class="center_medium_div_with_borders">
	<div class="form_title"><%=t('devise.sign_in_form_title')%></div>
	
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	  <p><%= f.label :email %><br />
	  <%= f.email_field :email %></p>
	
	  <p><%= f.label t('devise.passwd') %><br />
	  <%= f.password_field :password %></p>
	
	  <% if devise_mapping.rememberable? -%>
	    <p><%= f.check_box :remember_me %> <%= f.label t("devise.remember_me") %></p>
	  <% end -%>
	
	  <p><%= f.submit t('devise.sign_in') %></p>
	<% end %>
	
	<%= render :partial => "devise/shared/links" %>

</div>
