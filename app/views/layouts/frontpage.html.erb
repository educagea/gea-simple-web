<!-- HTML5 DOCTYPE -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
	<title><%= yield(:title).empty? ? t('frontpage.title') : yield(:title)%></title>
    <meta name="keywords" content="t('meta.keywords')%>" >
    <meta name="description" content= "t('meta.description')%>" >
	
    <%= stylesheet_link_tag "common","frontpage", "frontpage_header", :media => "screen, projection" %>
    <%= javascript_include_tag 'jquery' %>
    <%= favicon_link_tag "favicon.ico" %>

    <% if protect_against_forgery? %>
      <%= csrf_meta_tag %>
    <% end %>
	
	<script type="text/javascript" >
	    $(document).ready(function() {
	      <%= yield :javascript%>
	    });
    </script>
  </head>
  
  <body>  	
      <header>
        <%= render :partial => "frontpage/header" %>
      </header>
	  <section>        
		<%= render :partial => "frontpage/navbar" %>
      </section>
      <section id="full_content">        
                  <%= yield %>
      </section>
      <footer id="frontpage_footer">
        <%= render :partial => "frontpage/footer" %>
      </footer>
    </div>
</html>
