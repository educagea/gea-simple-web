<div id="headerFront">
	<div id="banner" class="banner_top">
		<div id="logo_gea">
			<%= link_to(image_tag('logo_gea.gif', :alt => t('logo.alt'), :id=>"header_logo"), '/'); %>
		</div>
	</div>
	<div class="div_login">
		
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		
		<%= f.label t('devise.email') %>
		<%= f.email_field :email, :id=>"input_email" %>

		<%= f.label t('devise.passwd') %>
	    <%= f.password_field :password, :id=>"input_passwd" %>

		<%= f.submit t('devise.sign_in') %>
	<% end -%>
	
		<div id="sub_login">
			<%= link_to t('devise.sign_up'), new_registration_path(resource_name), :class => "register_link clear_text" %>
			<span>|</span>
			<%= link_to t('devise.forgot_passwd'), new_password_path(resource_name), :class => "register_link clear_text" %>
		</div>
		<%= link_to "Sign out", destroy_user_session_path, :method => 'delete' %>
	</div>

</div>

